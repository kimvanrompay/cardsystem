<div id="<%= dom_id static %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Home:</strong>
    <%= static.home %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Disclaimer:</strong>
    <%= static.disclaimer %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this static", static, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this static", edit_static_path(static), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
